<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivcardlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/pokemon8" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvcardlarge"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp"
                android:clipToPadding="false"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="68dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right|center_vertical"
                    android:foregroundGravity="center_vertical|right"
                    app:srcCompat="@drawable/pricing" />

                <ImageView
                    android:id="@+id/ivtcg"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/tcg" />

                <TextView
                    android:id="@+id/tvcardprice"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dp"
                    android:textColor="#4CAF50"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="6dp">

                <TextView
                    android:id="@+id/tvpokedexnumber"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dp"
                    android:textColor="#C80000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/pokedex" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="6dp">

                <TextView
                    android:id="@+id/tvrarity"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dp"
                    android:textColor="#8946D5"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/masterball" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>